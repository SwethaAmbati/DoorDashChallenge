<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/restaurantItemLinearLayout">

    <ImageView
        android:id="@+id/iv_restuarant"
        android:layout_gravity="center_vertical"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:padding="5dp"
        android:visibility="visible"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/restaurantTextLayout">

        <TextView
            android:id="@+id/tv_restaurant_name"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="185dp"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/tv_restaurant_desc"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:layout_width="185dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tv_restaurant_name"/>

        <TextView
            android:id="@+id/tv_restaurant_status"
            android:layout_marginTop="48dp"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/tv_restaurant_desc"/>

    </RelativeLayout>
        </LinearLayout>


   </android.support.v7.widget.CardView>
</RelativeLayout>